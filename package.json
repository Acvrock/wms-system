{
  "name": "wms-system",
  "version": "1.0.0",
  "description": "Warehouse Management System for headphone accessories",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/server.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/server.js",
    "install:all": "npm install && cd client && npm install",
    "fresh-install": "npm run clean && npm install && cd client && npm install && npm run build",
    "clean": "rimraf node_modules client/node_modules"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sql.js": "^1.8.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "keywords": ["wms", "warehouse", "inventory", "management"],
  "author": "",
  "license": "MIT"
}